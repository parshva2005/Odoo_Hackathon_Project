<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StackIt</title>
    <!-- Bootstrap and custom styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Odoo_Hackathon_Project_MVC.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- ===================== Top Navbar ===================== -->
    <nav class="stackit-navbar">
        <div class="stackit-navbar-container">
            <!-- Logo: Far left, clickable -->
            <a asp-controller="Dashboard" asp-action="Dashboard" class="stackit-logo stackit-logo-it">Stack<span class="stackit-logo-it">It</span></a>
            <!-- Right: Ask/Home button, notification, user profile -->
            <div class="stackit-navbar-right">
                @if ((string)ViewContext.RouteData.Values["controller"] == "Question" && (string)ViewContext.RouteData.Values["action"] == "AskQuestion")
                {
                    <a asp-controller="Dashboard" asp-action="Dashboard" class="stackit-btn stackit-ask-btn"><i class="fas fa-home"></i> Home</a>
                }
                <button class="stackit-notification-btn stackit-navbar-icon"><i class="fas fa-bell"></i></button>
                <button class="stackit-user-btn stackit-navbar-icon"><i class="fas fa-user-circle"></i></button>
            </div>
        </div>
    </nav>
    <!-- ===================== Main Content ===================== -->
    <main class="stackit-main-content">
        <div class="stackit-content">
            @RenderBody() <!-- This is where each page's content will be rendered -->
        </div>
    </main>
    <!-- ===================== Scripts ===================== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
